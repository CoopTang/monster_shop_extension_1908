<section id='user-info'>
  <%=
    render partial: 'partials/user_info', locals: {
      name: @user.name,
      email: @user.email
    }
  %>
  <p><%= link_to 'Edit Profile', "/admin/users/#{@user.id}/edit" %></p>
</section>
<br>

<section id='user-address-links'>
  <h3> <%= @user.name %>'s Addresses</h3>
    <% @user.addresses.each do |address| %>
      <p>
        <%= link_to "#{address.name.capitalize}", "/admin/users/#{@user.id}/addresses/#{address.id}" %><br>
        <%= "#{address.address}\n#{address.city}, #{address.state} #{address.zip}" %>
      </p>
    <% end %>
</section>

<section id='user-order-links'>
  <h3> <%= @user.name %>'s Orders</h3>
  <% @user.orders.each do |order| %>
    <p>Order ID: <%= link_to "#{order.id}", admin_user_order_path(@user.id, order.id)%></p>
  <% end %>
</section>
